{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "server/*": ["server/*"]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "runtimeConfig.js",
    "next-i18next.config.js",
    "middleware.ts",
    "lambdas/lib/shared"
  ],
  "exclude": ["node_modules", "types", "coverage", "infra", "lambdas", ".next"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
