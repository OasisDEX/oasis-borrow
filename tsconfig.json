{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2017",
    "lib": ["dom", "es2018", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "server/*": ["server/*"],
      "components/*": ["components/*"],
      "analytics/*": ["analytics/*"],
      "blockchain/*": ["blockchain/*"],
      "helpers/*": ["helpers/*"],
      "features/*": ["features/*"],
      "pages/*": ["pages/*"],
      "handlers/*": ["handlers/*"],
      "content/*": ["content/*"]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "runtimeConfig.js",
    "next-i18next.config.js",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
